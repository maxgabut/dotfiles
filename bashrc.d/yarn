# credit: https://stackoverflow.com/a/60489061/9924986
# credit: https://github.com/yarnpkg/yarn/issues/1722#issuecomment-512937082
alias 'yarn-linked'="find . -type l | grep -v .bin | sed 's/^\.\/node_modules\///'"
alias 'yarn-unlink-all'="yarn-linked | xargs yarn unlink && yarn install --check-files"

alias 'yx'='yarn lint --fix'

